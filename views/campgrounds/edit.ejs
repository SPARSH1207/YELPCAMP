<% layout('layout/boilerplate')%>
   
<div class="row">
    
        
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
    <form method="POST" action="/Campground/<%=campground._id%>?_method=PUT" novalidate class="validated-form" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label" for"title">Title</label>
        <input class="form-control" type="text" value="<%=campground.title%>"id="title" name="campground[title]" required>
        
        <div class="valid-feedback">
            perfect!
        </div>
    </div>
   
    <div class="mb-3">
        <label class="form-label" for"location">location</label>
        <input class="form-control" type="text" value="<%=campground.location%>"id="location" name="campground[location]"required>
        <div class="valid-feedback">
            perfect!
        </div>
    </div>
   
    <!-- <div class="mb-3">
        <label class="form-label" for"image">Image Url</label>
        <input type="file" name="image" id="image" multiple>
    </div> -->

    <div class="input-group mb-3 custom-file">
        <input type="file" class="form-control custom-file-label" id="image" name="image"multiple>
        <label class="input-group-text" for="image">Upload</label>
      </div>
    
    <div class="mb-3">
        <label class="form-label" for"description">description</label>
        <textarea class="form-control" type="text"  id="description" name="campground[description]" required><%=campground.description%></textarea>
        <div class="valid-feedback">
            perfect!
        </div>
    </div>
    
    <div class="mb-3">
        <label class="form-label" for"price">Campground Price</label>
    <div class="input-group ">
        
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" value="<%=campground.price%>"id="price" name="campground[price]" class="form-control" placeholder="0.00" aria-label="price" aria-describedby"price-label" required>
        <div class="valid-feedback">
            perfect!
        </div>
    </div>
    </div>
    <div class="mb-3">
        <% campground.images.forEach(function(img,i){%>
      <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
      <div class="form-inline-check">
          <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
      </div>
      <label for="image-<%=i%>">Delete</label>
       <% }) %>
    </div>
    <div class="mb-3">
    <button class="btn btn-info">Update Campground</button>
</div>
</form>
<a href="/Campground/<%=campground._id%>">Back to the  Campground</a>

   </div>
   


</div>
